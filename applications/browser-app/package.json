{
  "name": "crossmodel-browser-app",
  "version": "0.5.0",
  "private": true,
  "description": "CrossModel Core Edition",
  "homepage": "https://github.com/crossmodel/crossmodel-core",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crossmodel/crossmodel-core.git"
  },
  "license": "AGPL-3.0-or-later",
  "author": {
    "name": "CrossBreeze",
    "email": "devops@crossbreeze.nl"
  },
  "scripts": {
    "build": "yarn -s rebuild && theia build --app-target=\"browser\" --mode development && yarn download:plugins",
    "postbuild": "shx cp -f ../../node_modules/libavoid-js/dist/libavoid.wasm ../../applications/browser-app/lib/frontend/libavoid.wasm",
    "build:prod": "yarn -s rebuild && theia build --app-target=\"browser\"",
    "clean": "theia clean && rimraf lib src-gen",
    "download:plugins": "theia download:plugins",
    "rebuild": "theia rebuild:browser --cacheRoot ../..",
    "start": "theia start --plugins=local-dir:plugins",
    "test": "jest --passWithNoTests",
    "watch": "theia build --watch --mode development"
  },
  "dependencies": {
    "@crossmodel/composite-editor": "0.5.0",
    "@crossmodel/core": "0.5.0",
    "@crossmodel/form-client": "0.5.0",
    "@crossmodel/glsp-client": "0.5.0",
    "@crossmodel/model-service": "0.5.0",
    "@crossmodel/product": "0.5.0",
    "@crossmodel/property-view": "0.5.0",
    "@theia/core": "1.63.1",
    "@theia/editor": "1.63.1",
    "@theia/filesystem": "1.63.1",
    "@theia/markers": "1.63.1",
    "@theia/messages": "1.63.1",
    "@theia/monaco": "1.63.1",
    "@theia/navigator": "1.63.1",
    "@theia/plugin-ext": "1.63.1",
    "@theia/plugin-ext-vscode": "1.63.1",
    "@theia/preferences": "1.63.1",
    "@theia/process": "1.63.1",
    "@theia/secondary-window": "1.63.1",
    "@theia/terminal": "1.63.1",
    "@theia/vsx-registry": "1.63.1",
    "@theia/workspace": "1.63.1"
  },
  "devDependencies": {
    "@theia/cli": "1.63.1"
  },
  "productName": "CrossModel Core Edition",
  "theia": {
    "target": "browser",
    "frontend": {
      "config": {
        "applicationName": "CrossModel Core Edition",
        "defaultTheme": {
          "light": "crossmodel-light",
          "dark": "crossmodel-dark"
        },
        "preferences": {
          "security.workspace.trust.enabled": false,
          "files.associations": {
            "*.port": "ignore"
          },
          "git.openRepositoryInParentFolders": "always"
        },
        "reloadOnReconnect": true
      }
    },
    "backend": {
      "config": {
        "frontendConnectionTimeout": 86400000
      }
    },
    "generator": {
      "config": {
        "preloadTemplate": "./resources/preload.html"
      }
    }
  },
  "theiaPlugins": {
    "vscode.json-1.95.3": "https://open-vsx.org/api/vscode/json/1.95.3/file/vscode.json-1.95.3.vsix",
    "vscode.json-language-features-1.95.3": "https://open-vsx.org/api/vscode/json-language-features/1.95.3/file/vscode.json-language-features-1.95.3.vsix",
    "vscode.npm-1.95.3": "https://open-vsx.org/api/vscode/npm/1.95.3/file/vscode.npm-1.95.3.vsix",
    "vscode.git-1.95.3": "https://open-vsx.org/api/vscode/git/1.95.3/file/vscode.git-1.95.3.vsix"
  },
  "theiaPluginsDir": "plugins"
}
