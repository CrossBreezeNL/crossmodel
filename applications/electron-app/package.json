{
  "name": "crossmodel-app",
  "version": "0.4.0",
  "private": true,
  "description": "CrossModel Core Edition",
  "homepage": "https://github.com/crossmodel/crossmodel-core",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crossmodel/crossmodel-core.git"
  },
  "license": "AGPL-3.0-or-later",
  "author": {
    "name": "CrossBreeze",
    "email": "devops@crossbreeze.nl"
  },
  "main": "scripts/crossmodel-electron-main.js",
  "scripts": {
    "build": "yarn -s rebuild && theia build --app-target=\"electron\" --mode development && yarn download:plugins",
    "postbuild": "shx cp  ../../node_modules/libavoid-js/dist/libavoid.wasm ../../applications/electron-app/lib/frontend/libavoid.wasm",
    "bundle": "cross-env NODE_OPTIONS=--max-old-space-size=8192 && yarn build",
    "clean": "theia clean && rimraf lib src-gen",
    "deploy": "rimraf dist && electron-builder -c.mac.identity=null --publish always",
    "download:plugins": "theia download:plugins",
    "package": "yarn package:pre && electron-builder -c.mac.identity=null --publish never",
    "package:extensions": "yarn --cwd ../../extensions/crossmodel-lang package -o ../../applications/electron-app/plugins/ && yarn --cwd ../../extensions/crossmodel-theme package -o ../../applications/electron-app/plugins/",
    "package:pre": "rimraf --glob dist plugins/crossmodel-* & yarn rebuild && yarn package:extensions",
    "package:preview": "yarn package:pre && electron-builder -c.mac.identity=null --dir",
    "rebuild": "theia rebuild:electron --cacheRoot ../..",
    "start": "cross-env NODE_ENV=development theia start --plugins=local-dir:plugins",
    "test": "jest --passWithNoTests",
    "watch": "theia build --watch --mode development"
  },
  "dependencies": {
    "@crossmodel/composite-editor": "0.4.0",
    "@crossmodel/core": "0.4.0",
    "@crossmodel/form-client": "0.4.0",
    "@crossmodel/glsp-client": "0.4.0",
    "@crossmodel/model-service": "0.4.0",
    "@crossmodel/product": "0.4.0",
    "@crossmodel/property-view": "0.4.0",
    "@theia/core": "1.60.2",
    "@theia/editor": "1.60.2",
    "@theia/electron": "1.60.2",
    "@theia/filesystem": "1.60.2",
    "@theia/markers": "1.60.2",
    "@theia/messages": "1.60.2",
    "@theia/monaco": "1.60.2",
    "@theia/navigator": "1.60.2",
    "@theia/plugin-ext": "1.60.2",
    "@theia/plugin-ext-vscode": "1.60.2",
    "@theia/preferences": "1.60.2",
    "@theia/process": "1.60.2",
    "@theia/secondary-window": "1.60.2",
    "@theia/terminal": "1.60.2",
    "@theia/vsx-registry": "1.60.2",
    "@theia/workspace": "1.60.2"
  },
  "devDependencies": {
    "@theia/cli": "1.60.2",
    "@theia/native-webpack-plugin": "1.60.2",
    "electron": "30.1.2",
    "electron-builder": "24.13.2"
  },
  "productName": "CrossModel Core Edition",
  "theia": {
    "target": "electron",
    "frontend": {
      "config": {
        "applicationName": "CrossModel Core Edition",
        "defaultTheme": {
          "light": "crossmodel-light",
          "dark": "crossmodel-dark"
        },
        "reloadOnReconnect": true,
        "preferences": {
          "security.workspace.trust.enabled": false,
          "files.associations": {
            "*.port": "ignore"
          },
          "git.openRepositoryInParentFolders": "always"
        },
        "electron": {
          "showWindowEarly": false,
          "splashScreenOptions": {
            "content": "resources/icons/icon_256x256.png",
            "height": 256,
            "width": 256
          }
        }
      }
    },
    "backend": {
      "config": {
        "frontendConnectionTimeout": -1
      }
    },
    "generator": {
      "config": {
        "preloadTemplate": "./resources/preload.html"
      }
    }
  },
  "theiaPlugins": {
    "vscode.json-1.95.3": "https://open-vsx.org/api/vscode/json/1.95.3/file/vscode.json-1.95.3.vsix",
    "vscode.json-language-features-1.95.3": "https://open-vsx.org/api/vscode/json-language-features/1.95.3/file/vscode.json-language-features-1.95.3.vsix",
    "vscode.npm-1.95.3": "https://open-vsx.org/api/vscode/npm/1.95.3/file/vscode.npm-1.95.3.vsix",
    "vscode.git-1.95.3": "https://open-vsx.org/api/vscode/git/1.95.3/file/vscode.git-1.95.3.vsix"
  },
  "theiaPluginsDir": "plugins"
}
