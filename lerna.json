{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "0.0.1",
  "npmClient": "yarn",
  "command": {
    "run": {
      "stream": true
    },
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "conventional-changelog-angular",
      "createRelease": "github",
      "push": true,
      "exact": true
    },
    "publish": {
      "ignoreChanges": ["**/*.md"]
    }
  }
}
