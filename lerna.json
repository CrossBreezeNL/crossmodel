{
  "lerna": "2.4.0",
  "version": "0.0.0",
  "useWorkspaces": true,
  "packages": ["packages/*", "applications/*", "extensions/*", "e2e-tests"],
  "npmClient": "yarn",
  "command": {
    "run": {
      "stream": true
    },
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "conventional-changelog-angular",
      "createRelease": "github",
      "push": true
    },
    "publish": {
      "ignoreChanges": ["**/*.md"]
    }
  }
}
